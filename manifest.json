{
  "manifest_version": 2,

  "name": "JIRA Tickets in Pull Requests",
  "description": "Makes sure each pull request has a JIRA ticket.",
  "version": "1",
  "permissions": [
    "storage", "tabs", "https://github.com/Thrillist/*/compare*", "https://thrillistmediagroup.atlassian.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://github.com/Thrillist/*"],
      "js": ["jquery-2.1.1.min.js","chrome_ext.js"]
    }
  ],
  "icons": { 
    "16": "icon-128.png",
    "48": "icon-128.png",
    "128": "icon-128.png" 
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": true
  }
}